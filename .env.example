# LLM Configuration - Primary: Gemini
GOOGLE_API_KEY=your_google_api_key_here
LLM_PROVIDER=gemini
# Options: gemini, ollama, openai
LLM_MODEL=gemini-2.0-flash-exp
# Other Gemini models: gemini-1.5-pro, gemini-1.5-flash

# Fallback LLM Providers
OPENAI_API_KEY=your_openai_api_key_here
OLLAMA_BASE_URL=http://localhost:11434

# Flask Configuration
FLASK_ENV=production
DEBUG=False

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# RAG Configuration
CHUNK_SIZE=1200
CHUNK_OVERLAP=200
RETRIEVAL_K=5
LLM_TEMPERATURE=0.2

# PDF URLs (will be downloaded automatically)
BTECH_PDF_URL=https://www.nitk.ac.in/document/attachments/8305/Btech_Curriculum_2023.pdf
PG_PDF_URL=https://www.nitk.ac.in/document/attachments/8306/PG_Curriculum_2023.pdf